source :rubygems
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

# Sinatra as is
github 'sinatra/sinatra' do
  gem 'sinatra'
  gem 'sinatra-contrib'
end

# Use Puma as the app server
gem 'puma'

# Loads environment variables from `.env`.
gem 'dotenv'

# HTTP/REST API client library.
gem 'faraday'
